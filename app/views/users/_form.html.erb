<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :username, nil, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :email, nil, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :password, nil, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :password_confirmation, 'Confirmation', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="actions form-actions">
    <%= f.submit :class => 'btn', :value =>  params[:action] == "new" ? 'Register' : 'Update' %>
  </div>
<% end %>
